<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  <ItemGroup>
    <Protobuf Include="Protos\people.proto" GrpcServices="Server"/>
    <Protobuf Include="Protos\notification.proto" GrpcServices="Client"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Elwark.CorrelationId" Version="1.0.5"/>
    <PackageReference Include="Elwark.CorrelationId.Grpc" Version="1.0.5"/>
    <PackageReference Include="Elwark.CorrelationId.Http" Version="1.0.5"/>
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.8.0"/>
    <PackageReference Include="Fluid.Core" Version="2.5.0"/>
    <PackageReference Include="Grpc.AspNetCore" Version="2.59.0"/>
    <PackageReference Include="Grpc.Tools" Version="2.59.0" PrivateAssets="all"/>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.0"/>
    <PackageReference Include="MinimalApis.LiquidViews" Version="2.5.0"/>
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.0"/>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\People.Infrastructure\People.Infrastructure.csproj"/>
    <ProjectReference Include="..\People.Kafka\People.Kafka.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <None Update="Email\Views\*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
